{
    "name": "ifcastle/service-manager",
    "description": "A library that allows organizing code according to the Services pattern.",
    "type": "library",
    "license": "MIT",
    "keywords": ["services"],
    "autoload": {
        "psr-4": {
            "IfCastle\\ServiceManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\ServiceManager\\": "./tests",
            "Examples\\": "./examples"
        }
    },
    "require": {
        "php": ">=8.5",
        "ifcastle/exceptions": "^5.0",
        "ifcastle/type-definitions": "^0.5.0",
        "ifcastle/di": "^0.8.0",
        "ifcastle/design-patterns": "^0.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "friendsofphp/php-cs-fixer": "^3.60",
        "amphp/php-cs-fixer-config": "^2.1",
        "ifcastle/codestyle": "^0.1.7",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.7.x-dev"
        }
    }
}
